rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow public read access to most collections, but restrict writes.
    // In a production app, you would have more granular rules.
    match /{document=**} {
      allow read: if true;
      allow write: if true; // For this demo, allow all writes. Be more restrictive in production.
    }
  }
}
